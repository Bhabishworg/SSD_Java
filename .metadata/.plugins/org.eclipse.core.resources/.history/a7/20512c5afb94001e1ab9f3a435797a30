package lab2;

/**
 * Implements the Counter interface with its methods 
 * definitions.
 */
public class WordProcessor implements Counter{
	/**
	 * Prints a message to inform that there is no sentence.
	 */
	private void informNoSentence() {
		System.out.println("There is no sentence.");
	}
	
	/**
	 * {@inheritDoc}
	 * Overrides the countWords method from Counter interface.
	 */
	@Override
	public int countWords(String sentence) {
		if (sentence == null) {
			informNoSentence();
			return 0;
		} else {
			// Stores words of sentences into words[] array.
			String words[] = sentence.split(" ");
			int wordCount = words.length;
			System.out.println("Words: " + wordCount);
			return wordCount;
		}
	}

	/**
	 * {@inheritDoc}
	 * Overrides the countLetters method from Counter 
	 * interface.
	 */
	@Override
	public int countLetters(String sentence) {
		if (sentence == null) {
			informNoSentence();
			return 0;
		} else {
			int letterCount = 0;
			// Goes through every character in the sentence.
			for (int i = 0; i < sentence.length(); i++) {
				// Checks if the character is a letter
				if (Character.isLetter(sentence.charAt(i))) {
					letterCount++;
				}
			}
			System.out.println("Letters: " + letterCount);
			return letterCount;
		}
	}

	@Override
	public int getLength(String sentence) {
		if (sentence == null) {
			informNoSentence();
			return 0;
		} else {
			int length = sentence.length();
			System.out.println("Length: " + length);
			return length;			
		}
	}
}
